{
  "id": "http://schema.ninjablocks.com/protocol/youtube",
  "$schema": "/protocol",
  "methods": {
    "playYoutube": {
      "description": "Play YouTube video",
      "params": [
        {
          "name": "videoId",
          "value": {
            "type": "string",
            "description": "The youtube video id",
            "pattern": "^[A-Za-z0-9]+$"
          }
        }
      ],
      "returns": {
        "value": {
          "type": "boolean"
        }
      }
    }
  },
  "events": {
    "state": {
      "value": {
        "type": "object",
        "properties": {
          "state": {
            "enum": [
              "playing",
              "paused",
              "stopped"
            ]
          },
          "position": {
            "type": "number",
            "description": "The position of the current video (if playing or paused)"
          },
          "video": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9]+$"
              },
              "length": {
                "type": "number",
                "description": "Length of the video in seconds",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  }
}